<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".authentication.AuthenticationActivity"
        android:background="@color/colorPrimary">

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"/>
    <TextView
            android:fontFamily="@font/helvetica_neue_medium"
            android:textSize="64sp"
            android:text="MMSE"
            android:textColor="#F0F0F0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/authentication_main_textview"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginBottom="32dp"/>

    <EditText
            android:fontFamily="@font/helvetica_neue_medium"
            android:textSize="18sp"
            android:background="@drawable/username_screen_field"
            android:textColorHint="#7EFFFFFF"
            android:textColor="#7EFFFFFF"
            android:textAllCaps="false"
            android:hint="Enter your username"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/authentication_username_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            android:layout_marginTop="16dp"/>

    <EditText
            android:padding="16dp"
            android:fontFamily="@font/helvetica_neue_medium"
            android:textSize="18sp"
            android:background="@drawable/username_screen_field"
            android:textColorHint="#7EFFFFFF"
            android:textColor="#7EFFFFFF"
            android:textAllCaps="false"
            android:hint="Enter your password"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/authentication_password_edittext"
            app:layout_constraintEnd_toEndOf="@+id/authentication_username_edittext"
            app:layout_constraintStart_toStartOf="@+id/authentication_username_edittext"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/authentication_username_edittext"
            android:layout_marginTop="16dp"/>
    <Button
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/helvetica_neue_bold"
            android:textSize="20sp"
            android:background="@color/colorPrimaryDark"
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/authentication_login_btn" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/authentication_password_edittext"
            android:layout_marginTop="16dp"/>
    <Button
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/helvetica_neue_bold"
            android:textSize="20sp"
            android:background="@color/colorPrimaryDark"
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/authentication_register_btn" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/authentication_or_textview"
            android:layout_marginTop="8dp"/>
    <TextView
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="@font/helvetica_neue_medium"
            android:text="or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/authentication_or_textview"
            app:layout_constraintTop_toBottomOf="@+id/authentication_login_btn" android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>