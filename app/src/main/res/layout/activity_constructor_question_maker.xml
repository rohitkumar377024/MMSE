<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".constructor.question_maker.choose_type.ConstructorQuestionMakerActivity">

    <TextView
            android:fontFamily="@font/helvetica_neue_thin"
            android:textSize="50sp"
            android:text="Question Maker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constructor_question_maker_title_txtview" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"/>
    <TextView
            android:fontFamily="@font/helvetica_neue_light"
            android:textSize="25sp"
            android:text="Which type of question do you want?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constructor_question_maker_description_txtview" app:layout_constraintTop_toBottomOf="@+id/constructor_question_maker_title_txtview"
            android:layout_marginTop="16dp"/>
    <Button
            android:fontFamily="@font/helvetica_neue_light"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:background="#9C27B0"
            android:text="Yes/No Question"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/yes_no_question_btn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/constructor_question_maker_description_txtview"
            android:layout_marginTop="96dp"/>
    <Button
            android:fontFamily="@font/helvetica_neue_light"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:background="@color/colorAccent"
            android:text="MCQ [Will be done tomorrow]"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/mcq_type_question_btn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/yes_no_question_btn"
            android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>