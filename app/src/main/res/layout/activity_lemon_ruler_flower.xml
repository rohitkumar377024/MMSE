<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".recall.first_recall.alternative_set_2.LemonRulerFlowerActivity">

    <Button
            android:fontFamily="@font/helvetica_neue_medium"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/ready_button_rounded_bg"
            android:text="Ready"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/lemon_ruler_flower_ready_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline300"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintVertical_bias="0.50"
            android:layout_marginEnd="16dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="{Lemon Ruler Flower} activity"
            android:gravity="center"
            android:fontFamily="@font/helvetica_neue_light"
            android:textSize="25sp"
            android:id="@+id/lemon_ruler_flower_vr_txtview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/lemon_ruler_flower_ready_btn"
            android:layout_marginTop="16dp"/>

    <TextView
            android:gravity="center"
            android:fontFamily="@font/helvetica_neue_light"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/lemon_ruler_flower_score_txt_final"
            android:layout_below="@id/lemon_ruler_flower_vr_txtview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lemon_ruler_flower_vr_txtview"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    <Button
            android:fontFamily="@font/helvetica_neue_medium"
            android:id="@+id/lemon_ruler_flower_go_back_btn"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/go_back_button_rounded_bg"
            android:text="Go Back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/lemon_ruler_flower_ready_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/lemon_ruler_flower_score_txt_final"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline300"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.5"/>
    <Button
            android:fontFamily="@font/helvetica_neue_medium"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:background="@drawable/done_button_rounded_bg"
            android:text="Done"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/lemon_ruler_flower_done_btn" app:layout_constraintEnd_toStartOf="@+id/guideline300"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>