<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".constructor.question_maker.question_types.mcq.ConstructorMcqQuestionActivity">

    <TextView
            android:fontFamily="@font/helvetica_neue_thin"
            android:textSize="50sp"
            android:text="MCQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView_minus_2" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"/>

    <Button
            android:fontFamily="@font/helvetica_neue_medium"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:background="@color/colorReadyButton"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Make Next Question"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/constructor_mcq_next_or_done_btn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>