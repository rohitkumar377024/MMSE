<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".username_screen.activities.UsernameMainActivity"
        android:background="@drawable/username_screen_gradient">

    <TextView
            android:fontFamily="@font/helvetica_neue_medium"
            android:textSize="64sp"
            android:text="MMSE"
            android:textColor="#F0F0F0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mmse_main_textview"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/existing_username_btn"
            android:layout_marginBottom="32dp"/>

    <Button
            android:fontFamily="@font/helvetica_neue_medium"
            android:textSize="18sp"
            android:background="@drawable/username_screen_btn"
            android:textColor="#7EFFFFFF"
            android:textAllCaps="false"
            android:text="Existing Username"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/existing_username_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2" android:layout_marginTop="16dp"/>

    <Button
            android:fontFamily="@font/helvetica_neue_medium"
            android:textSize="18sp"
            android:background="@drawable/username_screen_btn"
            android:textColor="#7EFFFFFF"
            android:textAllCaps="false"
            android:text="New Username"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/new_username_btn"
            app:layout_constraintEnd_toEndOf="@+id/existing_username_btn"
            app:layout_constraintStart_toStartOf="@+id/existing_username_btn"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/existing_username_btn"
            android:layout_marginTop="16dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.4"/>
    <Button
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/helvetica_neue_light"
            android:textSize="20sp"
            android:background="@color/colorAccent"
            android:text="Go To Numerical Questions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/goToNumericalQuestionsDummyBtn" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/goToOrientationQuestionsDummyBtn"
            android:layout_marginBottom="16dp"/>
    <Button
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/helvetica_neue_light"
            android:textSize="20sp"
            android:background="@color/colorAccent"
            android:text="Go To Orientation Questions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/goToOrientationQuestionsDummyBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>