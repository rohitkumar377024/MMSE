<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".constructor.introduction.ConstructorIntroductionActivity">

    <TextView
            android:gravity="center"
            android:textSize="40sp"
            android:fontFamily="@font/helvetica_neue_medium"
            android:text="Welcome to The Constructor!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constructor_introduction_title_txtview" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:gravity="center"
            android:textSize="35sp"
            android:fontFamily="@font/helvetica_neue_light"
            android:text="How many questions do you want in your test!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/constructor_introduction_title_txtview" app:layout_constraintEnd_toEndOf="@+id/constructor_introduction_title_txtview"
            android:id="@+id/constructor_introduction_description_txtview" app:layout_constraintTop_toBottomOf="@+id/constructor_introduction_title_txtview"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"/>
    <EditText
            android:textSize="25sp"
            android:hint="Number of questions"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/constructor_introduction_description_txtview"
            app:layout_constraintEnd_toEndOf="@+id/constructor_introduction_description_txtview" android:id="@+id/constructor_introduction_number_of_questions_edittext"
            app:layout_constraintTop_toBottomOf="@+id/constructor_introduction_description_txtview" android:layout_marginTop="32dp"/>
    <Button
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:text="Next"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="@+id/constructor_introduction_number_of_questions_edittext" app:layout_constraintEnd_toEndOf="@+id/constructor_introduction_number_of_questions_edittext"
            android:id="@+id/constructor_introduction_next_btn" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/constructor_introduction_number_of_questions_edittext"/>
</androidx.constraintlayout.widget.ConstraintLayout>