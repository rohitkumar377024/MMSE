<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".toolbox.ToolboxActivity">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="0dp" app:layout_constraintBottom_toTopOf="@+id/toolbox_title_txtview"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/toolbar_scroll_view"/>

    <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout">

        <TextView
                android:textColor="@android:color/white"
                android:fontFamily="@font/helvetica_neue_light"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Text"
                android:id="@+id/toolbox_text_txtview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
        />

        <TextView
                android:textColor="@android:color/white"
                android:fontFamily="@font/helvetica_neue_light"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Input"
                android:id="@+id/toolbox_input_txtview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
        />

        <TextView
                android:textColor="@android:color/white"
                android:fontFamily="@font/helvetica_neue_light"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Button"
                android:id="@+id/toolbox_btn_txtview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
        />

    </LinearLayout>

    <TextView
            android:fontFamily="@font/helvetica_neue_black"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:gravity="center"
            android:text="TOOLBOX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toolbox_title_txtview"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>