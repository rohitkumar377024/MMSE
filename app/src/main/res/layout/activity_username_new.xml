<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".username_screen.activities.UsernameNewActivity"
        android:background="@drawable/username_screen_gradient">

    <TextView
            android:fontFamily="@font/helvetica_neue_bold"
            android:gravity="center"
            android:textSize="32sp"
            android:textColor="#F0F0F0"
            android:text="Create a Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/username_edittext"
            android:layout_marginBottom="32dp" android:id="@+id/new_username_main_textview"/>
    <EditText
            android:fontFamily="@font/helvetica_neue_medium"
            android:padding="15dp"
            android:background="@drawable/username_screen_field"
            android:textColorHint="#7EFFFFFF"
            android:textColor="#ADFFFFFF"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_edittext"
            android:hint="Username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="@+id/guideline"
            android:layout_marginTop="16dp"/>
    <Button
            android:fontFamily="@font/helvetica_neue_bold"
            android:textSize="18sp"
            android:background="@drawable/username_screen_btn"
            android:textColor="#7EFFFFFF"
            android:textAllCaps="false"
            android:text="Log In"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/username_login_btn"
            app:layout_constraintTop_toBottomOf="@+id/username_edittext"
            app:layout_constraintEnd_toEndOf="@+id/username_edittext"
            app:layout_constraintStart_toStartOf="@+id/username_edittext" android:layout_marginTop="16dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.4"/>

</androidx.constraintlayout.widget.ConstraintLayout>