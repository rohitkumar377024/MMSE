<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        android:background="@android:color/white">

    <LinearLayout
            android:layout_margin="16dp"
            android:id="@+id/label_top_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/label_user_input_edittext"
                style="@style/ToolTextStyle"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Enter Text"
                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1.2" />
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/label_description_txtview"
                style="@style/ToolTextStyle"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/helvetica_neue_thin"
                android:padding="0dp"
                android:text="The label will look like below"
                android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/label_top_ll"
            android:id="@+id/label_bottom_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/label_show_text_txtview"
                style="@style/ToolTextStyle"
                android:padding="10dp"
                android:text="Sample Label" />
        <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/label_done_btn"
                style="@style/ToolButtonStyle"
                android:layout_marginBottom="16dp"
                android:text="Done"
                app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>